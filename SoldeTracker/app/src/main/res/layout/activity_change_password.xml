<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fadeScrollbars="false"

        android:isScrollContainer="false"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp">


            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/arrow_back" />

            <TextView
                android:id="@+id/text_NewPassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/imprima"
                android:text="@string/new_passwor"
                android:textColor="@color/gray"
                android:textSize="25sp"
                />


        </FrameLayout>


        <TextView
            android:id="@+id/text_EnterPW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/imprima"
            android:text="@string/textNPW"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextNewPassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:autofillHints="password"
            android:fontFamily="@font/imprima"
            android:hint="@string/new_passwor"
            android:inputType="textPassword"
            android:textColorHighlight="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="15sp"

            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxStrokeColor="@color/green"
            app:cursorColor="@color/green"
            app:endIconTint="@color/green"
            app:hintTextColor="@color/green"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/NewPassword_edit_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:textColorLink="@color/green" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextCPassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:autofillHints="Confirm Password"
            android:fontFamily="@font/imprima"
            android:hint="@string/Cpw"
            android:inputType="textPassword"
            android:textColorHighlight="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="15sp"

            app:boxCornerRadiusBottomEnd="15dp"
            app:boxCornerRadiusBottomStart="15dp"
            app:boxCornerRadiusTopEnd="15dp"
            app:boxCornerRadiusTopStart="15dp"
            app:boxStrokeColor="@color/green"
            app:cursorColor="@color/green"
            app:endIconTint="@color/green"
            app:hintTextColor="@color/green"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cPassword_edit_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:textColorLink="@color/green" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/sign_in"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/imprima"
            android:text="@string/CPW"
            android:textSize="20sp"
            app:cornerRadius="15dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>